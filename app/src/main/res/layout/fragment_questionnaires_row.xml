<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/qs_row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example title"
        android:textSize="16sp"
        android:textColor="#222"
        android:textStyle="" />

    <TextView
        android:id="@+id/qs_row_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/qs_row_title"
        android:layout_gravity="end"
        android:text="Natural England"
        android:scrollHorizontally="false"
        android:ellipsize="end"
        android:textColor="#222"
        android:maxLines="1" />

    <TextView
        android:id="@+id/qs_row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/qs_row_owner_name"
        android:layout_gravity="end"
        android:text="Sample subtitle. A bit longer than the first. Maybe even longer than that. A real long bit of text. Will it wrap?"
        android:scrollHorizontally="false"
        android:ellipsize="end"
        android:maxLines="1" />

    <!--<TextView-->
        <!--android:id="@+id/qs_row_date"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:text="" />-->

    <ImageView
        android:id="@+id/qs_row_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cont_desc_questionnaire_row"/>
</RelativeLayout>